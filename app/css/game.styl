#game
  h2
    font-size 20px
    padding-bottom 20px

  input
    padding 0 10px

#message
  text-align center
  padding 20px
  opacity 1
  border-radius 5px
  border 1px solid grey
  z-index 10
  -moz-transition-property opacity
  -moz-transition-duration 0.4s
  -webkit-transition-property opacity
  -webkit-transition-duration 0.4s

#message.hidden
  opacity 0

#question
  position relative
  padding 25px
  font-size 35px
  span, input
    padding 10px

  input
    border 1px solid #888
    border-radius 3px
    padding 10px
    margin 10px
    font-size 35px

  input[type='text']
    border none
    background-color #ddd
    width 150px

#players
  position absolute
  bottom 0
  min-height 100px
  width 100%

  p
    font-size 20px
    text-align left
    padding-bottom 10px

  .updated
    background-color yellow
    color black
    -webkit-transform scale(2.0)
    -moz-transform scale(2.0)

  .response
    display inline-block
    float left
    width 30px
    height 30px
    border 1px solid black
    border-left-width 0
    box-shadow(2px 2px 10px #333)

  .response:first-child
    border-top-left-radius 5px
    border-bottom-left-radius 5px
    border-left-width 1px

  .response:last-child
    border-top-right-radius 5px
    border-bottom-right-radius 5px

.correct
  vertical-gradient(#0ecc00, #098600)

.incorrect
  vertical-gradient(#ff0000, #9c0000)

