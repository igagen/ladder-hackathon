#game
  padding-top 10px
  -webkit-user-select none
  -moz-user-select none

  .MathJax_Display
    margin 7px 0

  input
    padding 0 10px

  .game-state
    display none

    p.info
      width 500px
      padding 20px
      border-radius 5px
      border 1px solid #ccc
      display none

  .game-state.active
    display block

  .finish
    width 400px
    margin 50px auto
    padding 20px
    border 4px solid #0a7cb8
    border-radius 5px
    vertical-gradient(#eaeaea, #ffffff)
    box-shadow: 1px 1px 5px #333;

    h2
      font-size 22px
      font-weight bold
      text-align center
      margin-bottom 15px

    .button
      display inline-block
      margin 15px
      width 125px
      text-align center

    .player
      width 130px
      font-size 35px

    .player-summary
      height 40px
      line-height 40px
      margin 0 0 10px 60px;
      font-weight bold

    img
      float left
      width 40px
      height 40px
    
    .name
      display inline-block
      width 125px

    .rating, .delta-rating
      display inline-block
      text-align right
      font-weight bold
      font-size 30px
      text-shadow 1px 1px 2px #333
      -webkit-transition-duration 400ms
      -moz-transition-duration 400ms

    .rating
      width 70px

    .delta-rating
      width 60px

    .positive
      color #0c0
    .negative
      color #c00

    .delta-rating.update
      -webkit-transform scale(2.5)
    
    .hidden
      opacity 0

  .player
    img
      float left
      width 30px
      height 30px
      margin-right 10px
    
    p
      position relative
      top 5px
      left 0

#message
  text-align center
  font-size 18px
  opacity 1
  border-radius 5px
  border 1px solid grey
  anim(opacity, 0.7s)

#timer
  padding 10px 20px
  font-size 50px
  vertical-gradient(#0da5f4, #0a7cb8)
  box-shadow(2px 2px 10px #333)
  border-radius 5px

#timer.finished
  vertical-gradient(#888, #555)

#message.hidden
  opacity 0

#response
  float right
  font-size 25px

  input, #message
    width 130px
    padding 10px
    margin 20px 10px

  #advance-button
    top -6px
    font-size 20px
    width 150px

  input
    display block
    border 1px solid #333
    border-radius 3px
 
  input[type='text']
    border none
    background-color #ccc

#advance-button:active
  top -5px

#stimulus, #explanation
  width 450px
  margin 10px
  padding 7px
  font-size 13px

#explanation
  border 1px solid #ccc
  background-color #fffae3

#players
  position absolute
  bottom 5px
  width 100%

  img
    width 30px
    height 30px


  .player
    position relative

  p
    position absolute
    top 2px
    left 36px
    font-size 12px
    font-weight bold
    padding 15px 0 5px

  .updated
    background-color yellow
    color black
    -webkit-transform scale(2.5)
    -moz-transform scale(2.5)

  .answers
    margin-top 2px

  .response
    display inline-block
    float left
    width 12px
    height 12px
    border 1px solid black
    border-left-width 0
    box-shadow(1px 1px 6px #333)

  .response:first-child
    border-top-left-radius 3px
    border-bottom-left-radius 3px
    border-left-width 1px

  .response:last-child
    border-top-right-radius 3px
    border-bottom-right-radius 3px

.correct
  vertical-gradient(#0ecc00, #098600)

.incorrect
  vertical-gradient(#ff0000, #9c0000)

#message
  padding 10px