#game
  -webkit-user-select none
  -moz-user-select none

  input
    padding 0 10px

  .game-state
    display none

    p.info
      width 500px
      padding 20px
      border-radius 5px
      border 1px solid #ccc

  .game-state.active
    display block

  .finish
    width 400px
    margin 50px auto
    padding 20px
    border 4px solid #bbb
    border-radius 5px
    vertical-gradient(#0da5f4, #0a7cb8)
    background-image: -webkit-gradient(linear, left top, left bottom, from(#eaeaea), to(#fff));
    box-shadow: 1px 1px 5px #333;

    h2
      font-size 22px
      font-weight bold
      text-align center
      margin-bottom 15px

    .button
      display inline-block
      margin 15px
      width 125px
      text-align center

    .player-summary
      height 40px
      line-height 40px
      margin 0 0 10px 60px;
      font-weight bold

    img
      float left
      width 40px
      height 40px
    
    .name
      display inline-block
      width 125px

    .rating
      font-size 30px
      text-shadow 0px 1px 1px #333
      -webkit-transition-duration 500ms
      display inline-block
      width 55px

    .delta-rating
      position relative
      left 30px
      font-weight bold
      font-size 30px
      display inline-block
      text-shadow 0px 1px 1px #333
      -webkit-transition-duration 500ms

    .positive
      color #0c0
    .negative
      color #c00

    .delta-rating.update
      -webkit-transform scale(2.5)
    
    .hidden
      opacity 0

#message
  text-align center
  font-size 18px
  opacity 1
  border-radius 5px
  border 1px solid grey
  anim(opacity, 0.7s)

#timer
  padding 10px 20px
  font-size 50px
  vertical-gradient(#0da5f4, #0a7cb8)
  box-shadow(2px 2px 10px #333)
  border-radius 5px

#timer.finished
  vertical-gradient(#888, #555)

#message.hidden
  opacity 0

#response
  float right
  font-size 25px

  input, #message
    width 130px
    padding 10px
    margin 20px 10px

  #advance-button
    top -6px
    font-size 20px
    width 150px

  input
    display block
    border 1px solid #333
    border-radius 3px
 
  input[type='text']
    border none
    background-color #ccc

#advance-button:active
  top -5px

#answer
  width 130px
  font-size 35px

#stimulus, #explanation
  width 400px
  margin 10px
  padding 10px

#explanation
  border 1px solid #ccc
  background-color #fffae3

#players
  position absolute
  bottom 0
  min-height 100px
  width 100%

  p
    text-align left
    font-size 15px
    font-weight bold
    padding 15px 0 5px

  .updated
    background-color yellow
    color black
    -webkit-transform scale(2.0)
    -moz-transform scale(2.0)

  .response
    display inline-block
    float left
    width 20px
    height 20px
    border 2px solid black
    border-left-width 0
    box-shadow(1px 1px 6px #333)

  .response:first-child
    border-top-left-radius 5px
    border-bottom-left-radius 5px
    border-left-width 2px

  .response:last-child
    border-top-right-radius 5px
    border-bottom-right-radius 5px

.correct
  vertical-gradient(#0ecc00, #098600)

.incorrect
  vertical-gradient(#ff0000, #9c0000)

#message
  padding 10px

.player
  img
    float left
    width 30px
    height 30px
  
  p
    position relative
    top -7px
    left 13px
  
  .answers
    min-height 35px