#game
  h2
    font-size 20px
    padding-bottom 20px

  input
    padding 0 10px

#message
  text-align center
  margin 0 auto 15px
  width 250px
  padding 15px
  font-size 18px
  opacity 1
  border-radius 5px
  border 1px solid grey
  z-index 10
  anim(opacity, 0.7s)

#timer
  position fixed
  top 20px
  right 20px
  padding 10px 20px
  font-size 50px
  vertical-gradient(#0da5f4, #0a7cb8)
  box-shadow(2px 2px 10px #333)
  border-radius 5px

#timer.finished
  vertical-gradient(#888, #555)

#message.hidden
  opacity 0

#question
  position relative
  padding 25px
  font-size 35px
  margin 0 auto
  width 500px
  border-radius 5px
  border 1px solid #ccc

  span, input
    padding 10px

  input
    border 1px solid #888
    border-radius 3px
    padding 10px
    margin 10px

  input[type='text']
    border none
    background-color #ddd
    width 150px

#answer
  font-size 35px

#confirm-button
  vertical-gradient(#0da5f4, #0a7cb8)
  top -6px
  font-size 20px

#confirm-button:active
  top -5px

.button
  position relative

.button:hover
  cursor pointer
  color white

.button:active
  top -1px

#players
  position absolute
  bottom 0
  min-height 100px
  width 100%

  p
    text-align left
    font-size 15px
    font-weight bold
    padding 15px 0 5px

  .updated
    background-color yellow
    color black
    -webkit-transform scale(2.0)
    -moz-transform scale(2.0)

  .response
    display inline-block
    float left
    width 20px
    height 20px
    border 2px solid black
    border-left-width 0
    box-shadow(2px 2px 10px #333)

  .response:first-child
    border-top-left-radius 5px
    border-bottom-left-radius 5px
    border-left-width 2px

  .response:last-child
    border-top-right-radius 5px
    border-bottom-right-radius 5px

.correct
  vertical-gradient(#0ecc00, #098600)

.incorrect
  vertical-gradient(#ff0000, #9c0000)

