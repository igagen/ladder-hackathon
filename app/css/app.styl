@import 'helpers'
@import 'game'
@import 'lobby'

// Main

body, html
  height 100%

body
  font-family Helvetica, Arial, sans-serif
  color #333
  overflow hidden


#content
  padding 0 20px

#lobby, #login
  .button
    display block
    width 115px
    font-size 13px
    text-align center
    font-weight bold
    text-shadow 0 1px 0px rgba(0, 0, 0, 0.6)

.button
  vertical-gradient(#0da5f4, #0a7cb8)
  padding 10px 15px
  border-radius 5px
  margin 10px 0
  box-shadow 1px 1px 4px #333
  color white
  text-decoration none
  cursor pointer
  position relative

.button:hover
  vertical-gradient(#08f, #04b)

.button:active
  top 1px

.clear
  clear both

.avatar
  padding 2px
  border 1px solid #ccc