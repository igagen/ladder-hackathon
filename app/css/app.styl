@import 'helpers'
@import 'game'

// Main

body, html
  height 100%

body
  font-family Helvetica, Arial, sans-serif
  vertical-gradient #ddd, #fff
  color #333
  overflow hidden


#content
  padding 20px

#lobby, #login
  .button
    display block
    width 150px
    font-size 16px
    text-align center
    font-weight bold
    text-shadow rgba(0, 0, 0, 0.6) 0 -1px 0px

.button
  vertical-gradient(#0da5f4, #0a7cb8)
  padding 10px 15px
  border-radius 5px
  margin 10px 0
  box-shadow 1px 1px 4px #333
  color white
  text-decoration none
  cursor pointer

.button:hover
  vertical-gradient(#08f, #04b)